@model AlbumsViewModel
@using ChinookEntities
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Albums</title>
</head>

<body>
    <h1>Chinook Music Store</h1>
    
    <p><a href="~/Insert/Index/3">Insert Album</a></p>
    <table border=1>
        <tr>
            <th>Album</th>
            <th>Artist</th>
            <th> </th>
            <th> </th>
            <th> </th>
        </tr>
        @foreach (Artist artist in @Model.Artists)
        {
            @foreach (Album album in @Model.Albums)
            {
                @if(@album.ArtistId == @artist.ArtistId){
                    <tr>
                        <td>@album.Title</td>
                        <td>@artist.Name</td>
                        <td><a href="~/Tracks/Index/@album.AlbumId">details</a></td>
                        <td><a href="~/Update/Index/@album.AlbumId">update</a></td>
                        <td><a href="~/Delete/Index/@album.AlbumId" onclick="return confirm('Are you sure you want to delete @album.Title by @artist.Name?')">delete</a></td>
                    </tr>
                }
                
            }
            
        }
    </table>
</body>

</html>